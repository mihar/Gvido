= simple_form_for [resource.student, resource], :class => :simple do |f|
  = f.input :enrollment_date, :start_year => Date.today.year, :end_year => Date.today.year + 5, :order => [:month, :year]
  = f.input :cancel_date, :start_year => Date.today.year, :end_year => Date.today.year + 5, :order => [:month, :year]
  = f.association :mentor, :prompt => "Izberite mentorja", :label_method => :title
  = f.association :instrument, :prompt => "Izberite inÅ¡trument"
  
  = f.input :payment_period
  = f.input :lessons_per_month
  = f.input :prepayment, :input_html => { :step => "0.01" }
  = f.input :price_per_lesson, :input_html => { :step => "0.01" }
  = f.input :discount_percent
  .submit
    = f.button :submit
