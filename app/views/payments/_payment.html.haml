%tr.clickable
  %td= link_to l(payment.payment_date), payment
  %td= payment.enrollment.instrument.title + '/' + payment.enrollment.mentor.full_name
  %td= payment_type(payment.payment_kind)
  - if payment.payment_kind < 4
    %td= payment.enrollment.payment_plan.title
  - else
    %td
  %td= number_to_currency payment.calculated_price
  %td= number_to_currency payment.price_per_lesson
  %td
    - if payment.settled
      &#10003;
    - else
      âœ—
  - if payment.payment_kind < 4
    %td= payment.lessons.map(&:expected_hours_this_month).sum
    %td= payment.lessons.map(&:hours_this_month).sum
    - payment.lessons.each do |lesson|
      %td= "#{l(lesson.check_in_date.at_beginning_of_month)} - #{l(lesson.check_in_date)}"
      %td= lesson.expected_hours_this_month
      %td= lesson.hours_this_month
