= title "Novice"
.crud
  .master
    = link_to "Ustvari novico", new_post_path

%table
  %thead
    %th Naslov
    %th Datum objave
    %th Vsebina
    %th
  %tbody
    - for post in collection
      %tr.clickable
        %td= post.title
        %td= post.created_at.to_s :short
        %td= (textilize truncate(post.text, :length => 32)).html_safe
        %td
          .crud= link_to "Odstrani", post, :confirm => destroy_confirmation(post), :method => :delete
          .crud= link_to "Uredi", edit_post_path(post)

