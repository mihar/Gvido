- title @notice.title
- @lightbox = true

%p.date
  %strong= @notice.created_at.to_s :simple
.text.textilize= @notice.body_html
- if @notice.photo.file?
  .photo= link_to_lightbox image_tag(@notice.photo.url(:small)), @notice.photo.url(:normal), 'obvestilo', @notice.title

- admin_section do
  = link_to "Uredi", edit_notice_path(@notice)
  |
  = link_to "Odstrani", @notice, :confirm => 'Ste prepričani?', :method => :delete