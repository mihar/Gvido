= title "Obvestila"
.crud
  .master
    = link_to "Ustvari obvestilo", new_notice_path

%table
  %thead
    %th Naslov obvestila
    %th Datum objave
    %th Vsebina
    %th Fotografija
    %th Opcije
  %tbody
    - for notice in collection
      %tr
        %td= notice.title
        %td= notice.created_at.to_s :short
        %td= truncate(notice.body, :length => 32)
        %td
          - if notice.photo.file?
            .photo= (image_tag(notice.photo.url(:small))).html_safe
        %td
          .crud= link_to "Odstrani", notice, :confirm => destroy_confirmation(notice), :method => :delete
          .crud= link_to "Uredi", edit_notice_path(notice)

