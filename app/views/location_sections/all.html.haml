= title "Skupine lokacij"

.crud
  .master
    = link_to "Nova skupina lokacij", new_location_section_path

%table
  %thead
    %th Naziv skupine lokacij
    %th Opcije
  %tbody
    - for location_section in collection
      %tr
        %td= location_section.title
        %td
          .crud= link_to "Odstrani", location_section, :confirm => destroy_confirmation(location_section), :method => :delete
          .crud= link_to "Uredi", edit_location_section_path(location_section)

