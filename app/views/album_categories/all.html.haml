= title "Kategorije albumov"

.crud
  .master
    = link_to "Nova kategorija albumov", new_album_category_path

%table
  %thead
    %th Naziv kategorije
    %td
  %tbody
    - collection.each do |album_category|
      %tr.clickable
        %td= album_category.title
        %td
          .crud
            = link_to "Odstrani", album_category, :confirm => destroy_confirmation(album_category), :method => :delete
            = link_to "Uredi", edit_album_category_path(album_category)

