!!! 5
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }/
    %title
      = yield(:title).empty?? "GVIDO Informacijski sistem" : yield(:title)
    = stylesheet_link_tag "dashboard"
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body{body_attrs}
    %header
      %h1= link_to "GVIDO", dashboard_path
      %h2= link_to "Informacijski sistem", dashboard_path
      - if user_signed_in?
        %nav
          = menu_item "O nas", "About", all_abouts_path, false
          = menu_item "Osebe", "People", people_path, false
          = menu_item "Mentorji", "Mentors", all_mentors_path, false
          = menu_item "Koncerti", "Gigs", all_gigs_path, false
          = menu_item "Kategorije albumov", "AlbumCategories", all_album_categories_path, false
          = menu_item "Albumi", "Albums", all_albums_path, false
          = menu_item "Programi", "Instruments", all_instruments_path, false
          = menu_item "Obvestila", "Notices", all_notices_path, false
          = menu_item "Novice", "Posts", all_posts_path, false
          = menu_item "VpraÅ¡anja", "Questions", all_questions_path, false
          = menu_item "Reference", "References", all_references_path, false
          = menu_item "Urniki", "Schedules", all_schedules_path, false
          = menu_item "Videi", "Movies", all_movies_path, false
          = menu_item "Kategorije povezav", "LinkCategories", all_link_categories_path, false
          = menu_item "Povezave", "Links", all_links_path, false
          = menu_item "Skupine lokacij", "LocationSections", all_location_sections_path, false
          = menu_item "Lokacije", "Locations", all_locations_path, false
        
      - if user_signed_in?
        #user
          %span Prijavljen
          %strong= current_user
          = link_to "Odjava", destroy_user_session_path

    #content
      - unless flash.empty?
        #flash
          - flash.each do |key, value|
            %p.flash{:id => key}= value
      = yield
    %footer
      &copy;2011 GVIDO
      %span.production
        &mdash; produkcija:
        = link_to image_tag("disrupt.png"), "http://disru.pt", :title => "Produkcija: DISRU.PT - Agile thinking (http://disru.pt)"
