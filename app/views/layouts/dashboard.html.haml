!!! 5
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }/
    %title
      = yield(:title).empty?? "GVIDO Informacijski sistem" : yield(:title)
    = stylesheet_link_tag "dashboard"
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body{body_attrs}
    %header
      %h1= link_to "GVIDO", dashboard_path
      %h2= link_to "Informacijski sistem", dashboard_path
      %nav
        = menu_item "Učenci", "People", people_path, false
        = menu_item "Mentorji", "Mentors", mentors_path, false
        = menu_item "Koncerti", "Gigs", all_gigs_path, false
    #content
      = yield
    %footer
      &copy;2011 GVIDO
      %span.production
        &mdash; produkcija:
        = link_to image_tag("disrupt.png"), "http://disru.pt", :title => "Produkcija: DISRU.PT - Agile thinking (http://disru.pt)"