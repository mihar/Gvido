- title "Koncert #{@gig.title}"


= spit @gig, :title, :h3

- if @gig.happening_at
  %p.date= l @gig.happening_at, :format => :simple

= spit @gig, :venue
= spit @gig, :address    

- if @gig.description
  %div.description
    %strong Opis:
    = (textilize @gig.description).html_safe

- unless @gig.mentors.empty?
  %p.mentors
    %strong Nastopajoƒçi mentorji:
    = spit_with_links @gig, :mentors

= link_to_back gigs_path

