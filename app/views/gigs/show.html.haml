- title "Koncert #{@gig.title}"

= spit @gig, :title, :h3

- if @gig.when
  %p.date= h @gig.when.to_s(:simple)

= spit @gig, :venue
= spit @gig, :address    

- if @gig.description
  %div.description
    %strong Opis:
    = (textilize @gig.description).html_safe

- unless @gig.mentors.empty?
  %p.mentors
    %strong Nastopajoči mentorji:
    = spit_with_links @gig, :mentors
= link_to "Uredi", edit_gig_path(@gig)
= admin_section do
  
  |
  = link_to "Izbrisi", @gig, :confirm => 'Ste prepričani?', :method => :delete
  |
  = link_to_back gigs_path
