= title "Urejanje mentorjevih prijavnih informacij"
- if @user.errors.any?
  #error
    %ul
      - @user.errors.full_messages.each do |msg|
        %li=msg

= form_tag update_login_account_mentor_path,  :method => :put, :class => :simple do
  %p
    = label_tag 'email', 'Zasebni email'
    = text_field_tag 'email', @user.email
  %p
    = label_tag 'password', 'Geslo'
    = password_field_tag 'password'
  
  %p
    = label_tag 'password_confirmation', 'Potrditev gesla'
    = password_field_tag 'password_confirmation'
    
  .submit
    = submit_tag 'Shrani'
