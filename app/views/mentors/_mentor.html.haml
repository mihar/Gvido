.mentor
  %h4.name= link_to mentor.full_name, mentor_path(mentor)
  .instruments
    - mentor.instruments.each do |i|
      = raw(link_to image_tag(i.icon.url(:small), :title => i.title), instrument_path(i), :title => i.title)
  .locations
    %ul
      - mentor.locations_by_city.each do |l|
        %li= l
        
