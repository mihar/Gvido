= title "Kategorije povezav"

.crud
  .master
    = link_to "Nova kategorija povezav", new_link_category_path

%table
  %thead
    %th Naziv kategorije
    %th Pozicija
    %td
  %tbody
    - for link_category in collection
      %tr.clickable
        %td= link_category.title
        %td= link_category.position
        %td
          .crud
            = link_to "Uredi", edit_link_category_path(link_category)
            = link_to "Odstrani", link_category, :confirm => 'Ste prepričani?', :method => :delete
