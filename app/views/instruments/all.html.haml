= title "Programi"

.crud
  .master
    = link_to "Dodaj program", new_instrument_path
    
%table
  %thead
    %tr
      %th Naziv inÅ¡trumenta
      %th Opis
      %th Cilji
      %th Dejavnosti
      %th Uvod
      %th Navodila za nakup
      %td
  %tbody
    - collection.each do |instrument|
      %tr.clickable
        %td= instrument.title 
        %td= (textilize instrument.description).html_safe
        %td= (textilize instrument.goals).html_safe
        %td= (textilize instrument.activities).html_safe
